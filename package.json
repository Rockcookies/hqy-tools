{
	"name": "csl",
	"version": "1.0.0",
	"description": "Console",
	"main": "index.js",

	"engines": {
		"node": ">=4.2.0",
		"npm": "^3.0.0"
	},

	"scripts": {
		"clean": "gulp clean",
		"compile": "better-npm-run compile",
		"deploy": "better-npm-run deploy",
		"watch": "better-npm-run watch",
		"serve": "better-npm-run serve",
		"test": "better-npm-run test",

		"lint": "eslint ./src/js",
		"lint:fix": "npm run lint -- --fix",

		"dev": "better-npm-run dev",
		"dev:nw": "npm run dev -- --nw",
		"dev:no-debug": "npm run dev -- --no_debug"
	},

	"betterScripts": {
		"compile": {
			"command": "gulp clean && gulp prestyles && gulp prejs && gulp compile",
			"env": {
				"DEBUG": "app:*",
				"NODE_ENV": "development"
			}
		},
		"deploy": {
			"command": "gulp clean && gulp prestyles && gulp prejs && gulp compile",
			"env": {
				"DEBUG": "app:*",
				"NODE_ENV": "production"
			}
		},
		"watch": {
			"command": "npm run compile && gulp watch",
			"env": {
				"DEBUG": "app:*",
				"NODE_ENV": "development"
			}
		},
		"serve": {
			"command": "npm run compile && gulp serve",
			"env": {
				"DEBUG": "app:*",
				"NODE_ENV": "development"
			}
		},
		"test": {
			"command": "gulp clean && gulp prejs",
			"env": {
				"DEBUG": "app:*",
				"NODE_ENV": "production"
			}
		}
	},

	"license": "MIT",

	"dependencies": {
		"jquery": "^2.2.4",

		"nodemon": "^1.11.0",
		"express": "^4.14.0",

		"babel-core": "^6.17.0",
		"babel-preset-es2015": "^6.16.0",
		"babel-preset-stage-0": "^6.16.0",
		"babel-register": "^6.16.3",
		"babel-runtime": "^6.11.6",

		"chai": "^3.5.0",
		"sinon": "^1.17.6",
		"mocha": "^3.1.2",

		"debug": "~2.2.x",
		"http-proxy-middleware": "^0.17.2",
		"browser-sync": "^2.17.3",
		"comment-json": "^1.1.3",
		"del": "~2.2.2",
		"glob": "~7.1.1",
		"through2": "~2.0.x",
		"better-npm-run": "^0.0.11",
		"yargs": "^6.2.0",
		"lodash": "^4.16.4",

		"gulp": "~3.9.x",
		"gulp-util": "~3.0.x",
		"gulp-sequence": "~0.4.x",
		"gulp-rename": "~1.2.x",
		"gulp-plumber": "~1.1.x",
		"gulp-debug": "~2.1.x",
		"gulp-if": "~2.0.x",

		"gulp-rev": "^7.1.2",
		"gulp-rev-collector": "~1.0.5",

		"gulp-minify-html": "~1.0.x",
		"ejs": "~2.5.2",

		"gulp-sourcemaps": "~2.1.1",
		"gulp-less": "~3.1.0",
		"gulp-header": "^1.8.8",
		"gulp-clean-css": "~2.0.12",
		"gulp-autoprefixer": "^3.1.1",
		"less-plugin-clean-css": "~1.5.x",
		"less-plugin-autoprefix": "~1.5.x",

		"webpack-stream": "~3.2.x",
		"webpack": "^1.13.2",
		"css-loader": "^0.25.0",
		"file-loader": "^0.9.0",
		"imports-loader": "^0.6.x",
		"exports-loader": "^0.6.x",
		"json-loader": "^0.5.4",
		"postcss-loader": "^1.0.0",
